@model IEnumerable<E_LPATR.Models.TeachersRequests>

@{
    ViewBag.Title = "TeachersRequests";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>TeachersRequests</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Education)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CV)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JoinedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountStatus.Name)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.Role.Name == "Pending...")
        {
            <tr>
               <td>
                   @Html.DisplayFor(modelItem => item.FirstName)
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.LastName)
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.Email)
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.Country.Name)
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.Role.Name)
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.Education)
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.CV)
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.JoinedOn)
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.AccountStatus.Name)
               </td>
               <td>
                   @Html.ActionLink("Details", "DetailedTeachersRequests", new { id =     item.Id }) |
                   @Html.ActionLink("Add", "AddTeacher", new { id = item.Id })
               </td>
            </tr>
        }
    }

</table>
