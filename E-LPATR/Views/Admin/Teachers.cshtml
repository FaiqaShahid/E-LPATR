@model IEnumerable<E_LPATR.Models.User>
@{
    ViewBag.Title = "Teachers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Teachers</h2>
<table class="display" id="table_id">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                Profile Picture
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Education
            </th>
            <th>
                Country Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JoinedOn)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.AccountStatus.Name == "Active" && item.Role.Name=="Teacher")
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @if (item.Image == null)
                {

                }
                else
                {
                    <img src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(item.Image))" style="max-width:50px" height="50" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Degree.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JoinedOn)
            </td>
            <td>
                @Html.ActionLink("Details", "DetailedTeacher", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteTeacherConfirmation", new { id = item.Id })
            </td>
        </tr>
            }

        }
    </tbody>
</table>
