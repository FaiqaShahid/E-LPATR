@model E_LPATR.Models.Category

@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddCategory</h2>
@using (Html.BeginForm("AddCat", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))

{
    <div class="form-group">
        <div class="input-group form-inline">
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-adjust"></span>
            </span>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control required", placeholder = "Enter Category Name " })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control required", id = "Image" } })
            <input type="file" name="file" required />
        </div>
    </div>
    <div class="col-md-4"><button type="submit" class="btn btn-success">Add</button></div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
