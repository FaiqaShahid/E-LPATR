@using E_LPATR.Models
@model Request
@{
    ViewBag.Title = "SentRequestRequirements";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-left:100px;margin-right:100px;margin-top:50px;margin-bottom:20px">
    <div class="panel panel-default">
        <div class="panel-body">
            <h3 class="text-center"><b>Add Requirements to @Model.Teacher.FirstName @Model.Teacher.LastName</b></h3>
            @using (Html.BeginForm("AddRequirements", "Student", FormMethod.Post))
            {
                @Html.HiddenFor(m => m.Teacher.Id, new { @value=Model.Teacher.Id})
                <div class="form-group form-inline">
                    <label class="control-label" for="Summary">Summary</label>
                    @Html.TextBoxFor(m => m.Title, new { @class="form-control required", @placeholder= "Enter Summary" })
                </div>
                <div class="form-group form-inline">
                    <label class="control-label" for="PackagePlan">Price</label>
                    @Html.TextBoxFor(m => m.Cost, new { @class="form-control required", @placeholder= "Enter Price" })
                </div>
                <div class="form-group form-inline">
                    <label class="control-label" for="PackagePlan">Delivery Time</label>
                    @Html.EditorFor(model => model.DeliveryTime, new { htmlAttributes = new { @class = "form-control required", id = "DeliveryTime" } })
                </div>
                <div class="form-group form-inline">
                    <label class="control-label" for="Describtion">Describtion</label>
                    @Html.TextAreaFor(m => m.Describtion, new { @class="form-control required", rows="5" ,@placeholder= "Enter Describtion" })
                </div>
                <div class="text-center">
                    <button class="btn btn-success btn-lg" type="submit">Submit</button>
                </div>
             }
        </div>
    </div>   
</div>