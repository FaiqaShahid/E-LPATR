@using E_LPATR.Models
@model Request
@{
    ViewBag.Title = "SentRequestRequirements";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-left:100px;margin-right:100px;margin-top:50px;margin-bottom:20px">
    <div class="col-lg-5 col-md-6 col-lg-push-3 col-md-push-3">
        <div class="panel panel-default">
            <div class="panel-body">
                <h3 class="text-center"><b>Add Requirements to @Model.Teacher.FirstName @Model.Teacher.LastName</b></h3>
                <div>
                    @using (Html.BeginForm("AddRequirements", "Student", FormMethod.Post))
                    {
                        @Html.HiddenFor(m => m.Teacher.Id, new { @value = Model.Teacher.Id })
                        <div class="form-group form-inline">
                            <label class="control-label" for="Summary" style="margin-left:50px;margin-right:15px">Summary</label>
                                @Html.TextBoxFor(m => m.Title, new { @class = "form-control required", @placeholder = "Enter Summary" })
                        </div>
                        <div class="form-group form-inline">
                            <label class="control-label" for="PackagePlan" style="margin-left:50px;margin-right:40px">Price</label>
                            @Html.TextBoxFor(m => m.Cost, new { @class = "form-control required", @placeholder = "Enter Price" })
                        </div>
                        <div class="form-group form-inline">
                            <label class="control-label" for="Describtion" style="margin-left:50px">Describtion</label>
                            @Html.TextAreaFor(m => m.Describtion, new { @class = "form-control required", rows = "3",cols="40", @placeholder = "Enter Description" })
                        </div>
                        <div class="text-center">
                            <button class="btn btn-success btn-lg" type="submit">Submit</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div> 
</div>