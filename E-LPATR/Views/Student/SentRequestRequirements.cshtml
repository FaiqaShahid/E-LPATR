
@{
    ViewBag.Title = "SentRequestRequirements";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container" style="margin-left:100px;margin-right:100px;margin-top:50px;margin-bottom:20px">
    <div class="panel panel-default">
        <div class="panel-body">
            <ol class="breadcrumb">
                <li><a href="~/Account/Home">Home</a></li>
                <li><a href="~/Student/SearchedGigs">Searched Category</a></li>
                <li><a href="~/Teacher/Profile">Profile</a></li>
                <li class="active">Send Request Requirnments</li>
            </ol>
            <h3 class="text-center"><b>Add Requirements</b></h3>
            <form role="form">
                <div class="form-group form-inline">
                    <label class="control-label" for="NoOfDays">Number of Days</label> &nbsp;&nbsp;&nbsp;&nbsp;
                    <input type="number" class="form-control" id="NoOfDays" min="1" required placeholder="Number of Days">
                </div>
                <div class="form-group">
                    <label class="control-label" for="Describtion">Enter Description</label>
                    <textarea class="form-control" rows="5" id="Description" required placeholder="Description" style="max-width:1000px"></textarea>
                </div>
                <div class="form-group form-inline">
                    <label class="control-label" for="Price">Price</label>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <input type="number" class="form-control" id="Price" required placeholder="Price">

                </div>
                <a href="~/Student/Home" class="btn btn-lg btn-success">Send</a>
            </form>
        </div>
    </div>   
</div>