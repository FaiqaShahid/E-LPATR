@using E_LPATR.Models
@model Review
@{
    ViewBag.Title = "GiveReview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:80px">
    <div class="panel panel-default">
        <div class="panel-body">
            <h3 class="text-center"><b>Give Review to @Model.Request.Teacher.FirstName @Model.Request.Teacher.LastName</b></h3>
            <h4>Teacher Communication and Would Recommend</h4>
            <br />
            <br />
            @using (Html.BeginForm("AddReview", "Student", FormMethod.Post))
            {
                @Html.HiddenFor(m => m.RequestId, new { @value=Model.Request.Id})
                <div class="form-group">
                    <fieldset class="rating" style="padding-left:100px">
                        @Html.RadioButtonFor(m=>m.Stars,new { id = "star5", name = "rating", value = "5" })
                        @Html.RadioButtonFor(m=>m.Stars,new { id = "star4half", name = "rating", value = "4.5" })
                        @Html.RadioButtonFor(m=>m.Stars,new { id = "star4", name = "rating", value = "4" })
                        @Html.RadioButtonFor(m=>m.Stars,new { id = "star3half", name = "rating", value = "3.5" })
                        @Html.RadioButtonFor(m=>m.Stars,new { id = "star3", name = "rating", value = "3" })
                        @Html.RadioButtonFor(m=>m.Stars,new { id = "star2half", name = "rating", value = "2.5" })
                        @Html.RadioButtonFor(m=>m.Stars,new { id = "star2", name = "rating", value = "2" })
                        @Html.RadioButtonFor(m=>m.Stars,new { id = "star1half", name = "rating", value = "1.5" })
                        @Html.RadioButtonFor(m=>m.Stars,new { id = "star1", name = "rating", value = "1" })
                        @Html.RadioButtonFor(m=>m.Stars,new { id = "starhalf", name = "rating", value = "0.5" })
                    </fieldset>
                    <label class="control-label" for="Describtion">Tell us about teacher</label>
                    <br/><br/>
                    @Html.TextAreaFor(m => m.Description, new { @class="form-comtrol required", rows=5,placeholder="Tell Us About Teacher"})
                </div>
            }
