@using E_LPATR.Models
@model List<Category>
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<img src="~/Images/Cover3.jpg" alt="Alternate Text" style="width:100%;height:400px;" />
<div class="container-fluid" style="margin-top:0px">
    <h1 class="text-center heading" style="margin-top:50px"><b>Subjects</b></h1>
    <div class="container" style="margin-top:50px">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12 ">
                <div class="panel panel-default">
                    <div class="panel-body text-center" style="font-size:18px">
                        @if (item.Image == null)
                        {
                        <a href="~/Account/SearchedGigs?SearchedData=@item.Name"><img src=@item.Image alt="@item.Name" class="img-responsive" style="width:300px;height:200px"></a>
                        }
                        else
                        {
                            <img src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(item.Image))" style="max-width:300px" height="200" />
                        }
                        @*<a href="~/Account/SearchedGigs?SearchedData=@item.Name"><img src=@item.Image alt="@item.Name" class="img-responsive" style="width:300px;height:200px"></a>*@
                        <h3><a href="~/Account/SearchedGigs?SearchedData=@item.Name">@item.Name</a> </h3>
                    </div>
                </div>
            </div>
        }
    </div>
    
</div>