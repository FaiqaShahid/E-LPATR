@using E_LPATR.Models
@model List<Profile>
@{
    ViewBag.Title = "SearchedGigs";
}

    <div class="container" style="margin-top:50px">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        @if (item.Image == null)
                        {
                                <img style="max-width:300px" src="~/Images/math.jpg" height="200" alt=@item.Name />
                                <h4><b>@item.Name</b></h4>

                        }
                        else
                        {
                                <img src="@String.Format("data:image/png;base64,{0}",   Convert.ToBase64String(item.Image))" alt=@item.Name style="max-width:300px" height="200" />
                                <h5><b>@item.Name</b></h5>
                        }
                        <b>Per Hour:</b> @item.PackagePlan.CostPerHour
                        <b> Per Day:</b> @item.PackagePlan.CostPerDay
                        <b> Per 3 Days:</b> @item.PackagePlan.CostPerHour
                        <br />
                        <div class="col-lg-push-4 col-lg-8">
                            <button class="btn btn-success">
                                @Html.ActionLink("View", "Profile", new { id = item.Id })
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
