@using E_LPATR.Models
@model List<Profile>
@{
    ViewBag.Title = "SearchedGigs";
}

    <div class="container" style="margin-top:50px">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        @if (item.Image == null)
                        {
                                <img style="max-width:300px" src="~/Images/math.jpg" height="200" alt=@item.Name />
                                <h5>@item.Name</h5>

                        }
                        else
                        {
                                <img src="@String.Format("data:image/png;base64,{0}",   Convert.ToBase64String(item.Image))" alt=@item.Name style="max-width:300px" height="200" />
                                <h5>@item.Name</h5>
                        }
                        @*<a href="~/Teacher/Home"><img src="~/Images/chemistry.jpg" alt="Alternate Text" class="img-responsive" /></a>*@
                        <h3>@item.Name</h3>
                        Per Hour: @item.PackagePlan.CostPerHour
                        Per Day: @item.PackagePlan.CostPerDay
                        Per 3 Days: @item.PackagePlan.CostPerHour
                        <div class="col-lg-push-8 col-lg-8">
                            <button class="btn btn-success">
                                @Html.ActionLink("View", "Profile", new { id = item.Id })
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>