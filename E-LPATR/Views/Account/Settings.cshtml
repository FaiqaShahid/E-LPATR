@using E_LPATR.Models
@model User
@{
    ViewBag.Title = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:50px">
    <div class="col-lg-6 col-lg-push-3 col-md-6 col-md-push-3">
        <div class="panel panel-default">
            <div class="panel-body">
                <ol class="breadcrumb">
                    <li><a href="~/Student/Home">Home</a></li>
                    <li class="active">Settings</li>
                </ol>
                <h3 class="text-center"><b>Settings</b></h3>
                <hr />
                @using (Html.BeginForm("EditAccount", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(m => m.Id, new {@value=Convert.ToInt32(Request.Cookies["user"]["Id"]) })
                    <div class="col-lg-5 col-md-5" style="margin-left:25px">
                        <div class="form-group">
                            <div class="input-group form-inline">
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-user"></span>
                                </span>
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control required", placeholder = "Enter First Name" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5 col-md-5" style="margin-left:25px">
                        <div class="form-group">
                            <div class="input-group form-inline">
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-user"></span>
                                </span>
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control required", placeholder = "Enter Last Name" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5 col-md-5" style="margin-left:25px">
                        <div class="form-group">
                            <div class="input-group form-inline">
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-lock"></span>
                                </span>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control required", placeholder = "New Password" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5 col-md-5" style="margin-left:25px">
                        <div class="form-group">
                            <div class="input-group form-inline">
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-lock"></span>
                                </span>
                                <input type="password" class="form-control" id="ConfirmPassword" placeholder="Confirm Password">
                            </div>
                        </div>
                    </div>
                    <hr />
                    <h3 class="text-center"><b>Account Deactivation </b></h3>
                    <div class="col-lg-5 col-md-5" style="margin-left:25px">
                        <div class="form-group">
                            <div class="input-group form-inline">
                                @Html.CheckBoxFor(m => m.Active) Account Deactivate
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4 col-lg-push-3 col-md-push-3">
                            <input type="submit" class="btn btn-success" value="Save Changes" />
                        </div>
                    </div>
                }
