@using E_LPATR.Models
@model User
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}

<div class="container" style="margin-top:50px">
    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
        <div class="panel panel-default">
            <div class="panel-body">
                @if (Request.Cookies["user"]["AccountStatus"] == "Open") { 
                    <h3>
                        Add profile for teaching.
                        @Html.ActionLink("Create Profile", "CreateProfile")
                    </h3>
                }
                else
                {
                    <h3>Your Account is pending</h3>
                }
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
        <div class="panel panel-default">
            <div class="panel-body">
                <div style="padding-left:40px">
                    <img class="img-responsive img-rounded" src="~/Images/User.png" />
                    <h4 class="text-center"><b>@Model.FirstName</b></h4>
                </div>
                <hr />
                <p><b>Education: </b> Graduation</p> <br />
                @*<p><b>Country: </b> @Model.Country.Name</p><br />*@
                <p><b>Last Seen: </b> 2 hours ago</p><br />
                <p><b>Current Time: </b>@DateTime.Now</p><br />
                <hr />
            </div>
        </div>
    </div>
</div>