
@{
    ViewBag.Title = "CreateProfile";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}

    <div class="container-fluid" style="margin-left:120px;margin-right:120px;margin-top:50px;margin-bottom:20px">
        <div class="panel panel-default">
            <div class="panel-body">
                <h3 class="text-center"><b>Create Profile</b></h3>
                <form role="form">
                    <div class="form-group">
                        <label class="control-label" for="Title">Title:</label><br />
                        <input class="form-control" id="Title" required placeholder="Enter Title" style="max-width:500px">
                    </div>
                    <div class="form-group form-inline">
                        <h4><b>Price</b></h4>
                        <label class="control-label" for="Price" min="100" style="padding-left:50px">Per Hour</label>
                        <input type="number" class="form-control" min="100" id="PricePerHour" required placeholder="Per Hour">
                        <label class="control-label" for="Price">Per Day</label>
                        <input type="number" class="form-control" min="100" id="PricePerDay" required placeholder="Per Day">
                        <label class="control-label" for="Price">Per Day</label>
                        <input type="number" class="form-control" id="Price" min="100" required placeholder="Per week">
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="Describtion">Description:</label><br />
                        <textarea class="form-control" rows="5" id="Description" required placeholder="Enter Description..." style="max-width:1000px"></textarea>
                    </div>
                    <a href="#" class="btn btn-success">Save</a>
                </form>
            </div>
        </div>
    </div>